<Layout>
  <main class="min-h-screen bg-background p-4 md:p-8 flex flex-col items-center justify-center relative">
    <BentoGrid class="animate-fade-in">
      <!-- Hero Section -->
      <BentoItem span="2" rowSpan="2" class="bg-primary text-primary-foreground dark:bg-card dark:text-foreground !border-none relative overflow-hidden">
