---
interface Props {
  label: string;
  title: string;
  description?: string;
  align?: "left" | "center";
}

const { label, title, description, align = "left" } = Astro.props;
const alignClass = align === "center" ? "text-center items-center" : "text-left items-start";
---

<div class:list={["flex flex-col gap-4 mb-12 md:mb-16", alignClass]}>
  <span class="text-xs uppercase tracking-[0.2em] font-semibold text-primary font-pixel">
    {label}
  </span>
  <h2 class="text-3xl md:text-4xl font-serif font-bold tracking-tight">
    {title}
  </h2>
  {description && (
    <p class:list={["text-muted-foreground text-lg max-w-2xl leading-relaxed", align === "center" && "mx-auto"]}>
      {description}
    </p>
  )}
</div>
