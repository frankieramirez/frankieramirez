---
import SectionHeading from "./SectionHeading.astro";

interface TimelineEvent {
  date: string;
  title: string;
  company?: string;
  description: string;
  current?: boolean;
}

const events: TimelineEvent[] = [
  {
    date: "2023 — Present",
    title: "Senior Frontend Engineer",
    description: "Leading frontend architecture and design systems. Building scalable component libraries and establishing engineering patterns across the organization.",
    current: true,
  },
  {
    date: "2020 — 2023",
    title: "Frontend Developer",
    description: "Developed scalable web applications using React and TypeScript. Contributed to design system initiatives and improved application performance.",
  },
  {
    date: "2012 — 2020",
    title: "Web Developer",
    description: "Built responsive web experiences across multiple projects. Grew from junior developer to leading frontend initiatives.",
  },
  {
    date: "2010 — 2012",
    title: "Full Sail University",
    description: "Bachelor of Science in Web Design & Development. Graduated as Valedictorian.",
  },
];
---

<section id="experience" class="section">
  <div class="max-w-4xl mx-auto px-4 md:px-8">
    <div class="scroll-animate">
      <SectionHeading
        label="Experience"
        title="Professional Journey"
      />
    </div>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-0 md:left-8 top-0 bottom-0 w-px bg-border" aria-hidden="true"></div>

      <div class="space-y-12">
        {events.map((event, i) => (
          <div
            class="timeline-item relative pl-8 md:pl-20 scroll-animate"
            style={`transition-delay: ${i * 100}ms`}
          >
            <!-- Dot -->
            <div class:list={[
              "absolute left-0 md:left-8 top-1.5 -translate-x-1/2 w-3 h-3 rounded-full border-2 border-background z-10",
              event.current ? "bg-primary pulse-dot" : "bg-muted-foreground/40"
            ]} />

            <!-- Content -->
            <div>
              <span class="text-xs font-mono text-primary tracking-wider uppercase block mb-1.5">
                {event.date}
              </span>
              <h3 class="text-xl font-serif font-bold mb-1.5">
                {event.title}
              </h3>
              {event.company && (
                <p class="text-sm text-muted-foreground mb-2">{event.company}</p>
              )}
              <p class="text-muted-foreground text-sm leading-relaxed max-w-lg">
                {event.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

